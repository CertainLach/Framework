{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "sourceMap": true,
    "noEmit": false,
    "jsx": "react",
    "noEmitHelpers": false,
    "importHelpers": false,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "lib": [
      "es5",
      "es6",
      "es2015",
      "es7",
      "es2016",
      "es2017",
      "dom"
    ],
    "allowJs": false,
    "typeRoots": [
      "node_modules"
    ],
    "types": [
      "node",
      "jasmine"
    ],
    "baseUrl": "./",
    "paths": {
      "*": [
        "*",
        "packages/*"
      ]
    },
    "declaration": true,
    "strict": true
  },
  "compileOnSave": false,
}
