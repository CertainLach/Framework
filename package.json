{
  "name": "@meteor-it/all",
  "scripts": {
    "clean": "npm run clean:src&&npm run clean:docs&&npm run clean:dependencies",
    "clean:src": "gulp clean",
    "clean:docs": "rm -rf docs",
    "clean:dependencies": "lerna clean -y",
    "build": "npm run build:dependencies&&npm run build:src&&npm run build:docs",
    "build:src": "gulp compile",
    "build:docs": "cd packages&&typedoc --out ../docs --name Meteor.Framework --ignoreCompilerErrors --readme none --hideGenerator ./&&cd ..",
    "build:dependencies": "lerna bootstrap",
    "dev": "npm run clean&&npm run dev:link&&npm run build:dependencies",
    "dev:link": "lerna exec yarn link",
    "publish": "npm run clean&&npm run build&&lerna publish"
  },
  "devDependencies": {
    "@types/chokidar": "^2.1.3",
    "@types/webpack-env": "^1.14.0",
    "gulp": "^4.0.2",
    "gulp-clean-fix": "^0.3.4",
    "gulp-cli": "^2.2.0",
    "gulp-rename": "^1.4.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-typescript": "^5.0.1",
    "lerna": "^3.16.4",
    "rimraf": "^3.0.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.5.3"
  },
  "version": "0.0.0"
}